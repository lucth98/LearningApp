<?xml version="1.0" encoding="utf-8"?><!DOCTYPE subject [<!--    -->
    <!ELEMENT subject (text,lesson*)>
    <!ELEMENT text  (#PCDATA)>
    <!ELEMENT lesson (text, question*)>
    <!ELEMENT answer (#PCDATA)>
    <!ELEMENT question (text,answer*)>
    <!ATTLIST answer
        isCorrect (true|false) #REQUIRED

        >
    <!ATTLIST subject
        Name   CDATA #REQUIRED>
    <!ATTLIST lesson
        Name   CDATA #REQUIRED>
    <!ATTLIST question
        Name   CDATA #REQUIRED>

    ]>
